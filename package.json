    "cron": "ncb000gt/node-cron",
    "cycle-mqtt-driver": "kaosat-dev/cycle-mqtt-driver",
    "cycle-simple-http-driver": "kaosat-dev/cycle-simple-http-driver",
    "cycle-socket.io": "kaosat-dev/cycle-socket.io",
    "cycle-tingodb-driver": "kaosat-dev/cycle-tingodb-driver",
    "fast.js": "^0.1.1",
    "fecha": "^1.1.0",
    "metrics-graphics": "mozilla/metrics-graphics",
    "mg-line-brushing": "dandehavilland/mg-line-brushing",
    "most": "^0.18.0",
    "ramda": "^0.19.1",
    "rx": "^4.0.8",
    "rx-dom": "^7.0.3",
    "rx-node": "^1.0.1",
    "seamless-immutable": "^4.0.1",
    "shortid": "^2.2.4",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "css-modulesify": "^0.15.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "browserify": "browserify src/client  -t babelify -p [ css-modulesify -o dist/client/main.css ] --o dist/client/bundle.js",
    "build-server": "babel src/server --out-dir dist/server",
    "build-client": "npm run browserify",
    "watch-server": "babel src/server --watch --out-dir dist/server",
    "watch-client": "watchify src/client  -t babelify -p [ css-modulesify -o dist/client/main.css ] --o dist/client/bundle.js -v -d",
    "run-server": "nodemon --watch dist/server/ dist/server/index.js",
    "start-dev": "npm run run-server &  npm run watch-server & npm run watch-client",
    "start": "npm run run-server",
    "mocha": "mocha src --compilers js:babel-core/register",
    "test": "npm run mocha",
    "release": "npm run release-patch",
    "release-patch": "git checkout master ; npm version patch && git push origin master --tags ",
    "release-minor": "git checkout master ; npm version patch && git push origin master --tags ",
    "release-major": "git checkout master ; npm version patch && git push origin master --tags "
  },
  "browserify-shim": {
    "rx": "global:Rx"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
